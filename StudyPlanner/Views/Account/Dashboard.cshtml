@model StudyPlanner.Models.User

@{
    ViewData["Title"] = "Dashboard";
}

<div class="container mt-5">
    <div class="card shadow-sm">
        <div class="card-body">
            <h3 class="mb-3">Welcome, @Model.FullName</h3>

            <p><strong>Email:</strong> @Model.Email</p>
            <p><strong>Account Created:</strong> @Model.CreatedAt</p>

            <hr />

            <div class="d-flex gap-3">
                <button class="btn btn-outline-primary" disabled>
                    View Study Plan
                </button>

                <a href="/Account/EditProfile" class="btn btn-outline-secondary">
                    Update Profile
                </a>

                <a href="/Account/DeleteAccount"
                   class="btn btn-danger"
                   onclick="return confirm('Are you sure you want to delete your account?');">
                    Delete Account
                </a>


                <a href="/Account/Logout" class="btn btn-danger">
                    Logout
                </a>
            </div>
        </div>
    </div>
</div>
